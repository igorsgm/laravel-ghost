{
    "name": "igorsgm/laravel-ghost",
    "description": "ðŸ‘»â€¢ A Laravel wrapper that allows you to access Ghost APIs (Content & Admin). Access, create and manage your Ghost content from you app!",
    "keywords": [
        "igorsgm",
        "laravel-ghost",
        "laravel",
        "ghost",
        "blog",
        "cms",
    ],
    "homepage": "https://github.com/igorsgm/laravel-ghost",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Igor Moraes",
            "email": "igor.sgm@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "firebase/php-jwt": "^6.1",
        "guzzlehttp/guzzle": "^7.4",
        "illuminate/support": "^7.0|^8.0|^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "pestphp/pest": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "Igorsgm\\Ghost\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Igorsgm\\Ghost\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage ./vendor/bin/pest --coverage"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Igorsgm\\Ghost\\GhostServiceProvider"
            ],
            "aliases": {
                "Ghost": "Igorsgm\\Ghost\\Facades\\Ghost"
            }
        }
    }
}
